                            <h2 class="CompanyTitle" style="text-align:left"><b><u>GULFLINE MOTORS</u></b></h2>
                            <h4 class="BLReport" style="float: right"><b>BL Report</b></h4>

                            @if (@TempData["StartBL"] != null && @TempData["EndBL"] != null)
                            {
                                <h5 class="StratEnd" style="float: left"> From: @TempData["StartBL"] till: @TempData["EndBL"]</h5>
                            }

                        </div>*@


                    </div>
