                                    <h5 class="startEnd text-right"> From:   @TempData["StartPurchaseDate"]    till:  @TempData["EndPurchaseDate"]</h5>
                                }
                                <h4  style="position:absolute; top:70%; left: 1.5%;">@Configuration.GetSection("AppSettings").GetSection("CompanyName").Value.ToString()</h4>
                                <h3>Stock Report</h3>

                            </div>
                        </div>
