        .ColHeading {
            background-color: #d3d3d3;
            font-size: 18px;
            text-align: center
        }

        .CompanyTitle {
            font-size: 21px;
            padding-bottom: 20px;
        }
        .StockReport {
            font-size: 20px;
            padding-bottom: 20px;
        }
        .startEnd {
            padding-left: 20px;
            padding-top:26px;
            font-size:15px;
        }
    </style>


</head>

<BODY>


    <div class="row">
        <div class="col">
            <section>
                <header>
                    <div class="row form-inline">
