@using DAL
@using DAL.Models
@model DAL.oClasses.OBasicData
@using X.PagedList.Mvc.Core; @*//import this so we get our HTML Helper*@
@using X.PagedList;  @*//import this so we can cast our list to IPagedList*@
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

@{ Layout = null; }

<!DOCTYPE HTML>
<HTML>
<head>

    <!-- Basic -->
    <meta charset="UTF-8">

    <title>@ViewBag.PageTitle</title>
    <meta name="keywords" content="DearlerSol | Dealers Management System " />
    <meta name="description" content="Vehicle Management System | Dealer Management System | Dealer ERP ">
    <meta name="author" content="DealerSol.com">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Favicon  -->
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">


    <!-- Vendor CSS -->
    <link rel="stylesheet" href="~/vendor/bootstrap/css/bootstrap.css" />


    <style>
        .moneycol {
            text-align: right;
        }

        .controlheight {
            height: 1px;
            border: 1px solid #d3d3d3;
            margin: 0px;
        }

            .controlheight table th, .table td {
                padding: 5px;
            }

        .SumHeading {
            background-color: #d3d3d3;
            text-align: left;
            font-weight: bold;
            font-size: 16px
        }

        .ColHeading {
            background-color: #d3d3d3;
            font-size: 18px;
            text-align: center
        }
    </style>


</head>

<BODY>




    <div class="row">
        <div class="col">
            <section>
                <header>
                    <div class="row form-inline">
                        @* Farzaib *@
                        <div class="col-md-6 ">
                            <div class="text-center">
                                <h4 class="text-left" style="position:absolute; top:10%; left: 1.5%;">@Configuration.GetSection("AppSettings").GetSection("CompanyName").Value.ToString()</h4>
                                <h3>Inventory</h3>
                            </div>
                        </div>
                        @*<div class="col-md-12" style="text-align:center">

                                <h3 style="color:black;">
                                    Inventory

                                </h3>

                            </div>*@


                    </div>

                </header>
                <div>
                    <table class="table table-bordered" @*id="datatable-default"*@>
                        <thead>
                            <tr class="ColHeading">


                                <th>  ItemCode </th>
                                <th>  ItemName </th>
                                <th>  ItemDescription </th>

                                <th>  Purchase_Qty </th>
                                <th>  Sold_Qty </th>
                                <th>  InHand_Qty   </th>


                                <th>  BarCode </th>
                                <th>  Unit_Price </th>
                                <th>  Sale_Price </th>


                                <th>  UOM </th>

                                <th>  StartYear </th>
                                <th>  EndYear </th>



                                <th>  Received_Qty </th>
                                <th>  Delivered_Qty </th>
                                <th>  Return_Qty </th>
                                <th>  OpeningBal </th>

                            </tr>
                        </thead>
                        <tbody>


                            @if (Model.InventryMasterObj != null)
                            {


                                foreach (Pa_Inventry_DAL item in Model.InventryMasterObj)
                                {

                                    <tr>


                                        <td class="controlheight text-nowrap">@Html.DisplayFor(modelItem => item.ItemCode) </td>
                                        <td class="controlheight text-nowrap">@Html.DisplayFor(modelItem => item.ItemName) </td>
                                        <td class="controlheight">@Html.DisplayFor(modelItem => item.ItemDescription)</td>





                                        <td class="controlheight text-nowrap">@Html.DisplayFor(modelItem => item.Purchase_Qty) </td>
                                        <td class="controlheight">@Html.DisplayFor(modelItem => item.Sold_Qty)</td>
                                        <td class="controlheight moneycol">@Html.DisplayFor(modelItem => item.InHand_Qty) </td>


                                        <td class="controlheight ">@Html.DisplayFor(modelItem => item.BarCode) </td>
                                        <td class="controlheight text-nowrap">@Html.DisplayFor(modelItem => item.UnitPrice) </td>
                                        <td class="controlheight text-nowrap">@Html.DisplayFor(modelItem => item.SalePrice) </td>


                                        <td class="controlheight ">@Html.DisplayFor(modelItem => item.UOM) </td>


                                        <td class="controlheight text-nowrap">@Html.DisplayFor(modelItem => item.StartYear) </td>
                                        <td class="controlheight">@Html.DisplayFor(modelItem => item.EndYear)</td>



                                        <td class="controlheight ">@Html.DisplayFor(modelItem => item.Received_Qty) </td>
                                        <td class="controlheight text-nowrap">@Html.DisplayFor(modelItem => item.Delivered_Qty) </td>
                                        <td class="controlheight text-nowrap">@Html.DisplayFor(modelItem => item.Return_Qty) </td>
                                        <td class="controlheight">@Html.DisplayFor(modelItem => item.OpeningBal)</td>

                                    </tr>
                                }



                            }


                        </tbody>

                    </table>







                </div>
            </section>
        </div>
    </div>


</BODY>
</HTML>