@using DAL
@using DAL.Models
@model DAL.oClasses.OInventory



<div class="modal-header" style="background: #f6f6f6;">


    <h4 class="modal-title">Location Details</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>

</div>


<div class="modal-body">

    <section class="card">

        <div class="card-body">


           

            <div class="row form-group">

                <div class="col-lg-12">

                    <table class="table table-responsive-md table-bordered mb-0 mt-2">
                        <thead>
                            <tr>
                                <th>Item</th>
                                <th>Location</th>
                                <th>Qty</th>

                            </tr>
                        </thead>

                        <tbody>

                            @if (Model.LocDetailList != null)
                            {
                                foreach (Pa_PurchaseDetails_DAL item in Model.LocDetailList)
                                {


                                    <tr>
                                        <td>

                                            @item.ItemName
                                        </td>
                                        <td>
                                            @item.LocationName


                                        </td>
                                        <td>
                                            @item.Quantity


                                        </td>

                                    </tr>
                                }
                            }

                        </tbody>

                    </table>

                </div>


            </div>





        </div>



    </section>
</div>
