    ViewBag.CompanyName = Configuration.GetSection("AppSettings").GetSection("CompanyName").Value;

}

<!DOCTYPE HTML>
<HTML>
<head>

    <!-- Basic -->
    <meta charset="UTF-8">

    <title>@ViewBag.PageTitle</title>
    <meta name="keywords" content="DearlerSol | Dealers Management System " />
    <meta name="description" content="Vehicle Management System | Dealer Management System | Dealer ERP ">
    <meta name="author" content="DealerSol.com">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Favicon  -->
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">


    <!-- Vendor CSS -->
    <link rel="stylesheet" href="~/vendor/bootstrap/css/bootstrap.css" />












    <style>
        .moneycol {
            text-align: right;
        }

        .controlheight {
            height: 1px;
            border: 1px solid #d3d3d3;
            margin: 0px;
        }

            .controlheight table th, .table td {
                padding: 5px;
            }

        .SumHeading {
            background-color: #d3d3d3;
            text-align: left;
            font-weight: bold;
            font-size: 16px
        }

        .ColHeading {
            background-color: #d3d3d3;
            font-size: 18px;
            text-align: center
        }

        .CompanyTitle {
            font-size: 21px;
            padding-bottom: 20px;
        }

        .PurchaseReport {
            font-size: 20px;
            padding-bottom: 15px;
        }

        .StratEnd {
            font-size: 15px;
            padding-top: 20px;
            padding-left: 5px;
        }

        .saleVale {
            background-color: #d3d3d3;
            padding-right: 20px;
        }

        .Total {
            background-color: #d3d3d3;
        }
    </style>


</head>

<BODY>


    <div class="row">
        <div class="col">
            <section>
                <header>
                    <div class="row form-inline">
                        @* Farzaib *@
                        <div class="col-md-6 ">
                            <div class="text-center">
                                @if (@TempData["StartPur"] != null && @TempData["EndPur"] != null)
                                {
                                    <h5 class="StratEnd text-right"> From: @TempData["StartPur"] till: @TempData["StartPur"]</h5>
                                }
                                <h3 class="text-left" style="position:absolute; top:15%; left: 1.5%;">@Configuration.GetSection("AppSettings").GetSection("CompanyName").Value.ToString()</h3>
                                <h3>VAT IN Report</h3>

                            </div>
                        </div>
