            <h2 class="CompanyTitle" style="text-align:left"><b><u>@ViewBag.CompanyName</u></b></h2>
            <h4 class="PurchaseReport" style="float: right"><b>VAT IN Report</b></h4>

            @if (@TempData["StartPur"] != null && @TempData["EndPur"] != null)
