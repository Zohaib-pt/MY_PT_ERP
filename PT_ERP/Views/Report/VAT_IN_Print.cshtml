                    </div>
                 
                </header>
                <div>
                    <table class="table table-bordered" @*id="datatable-default"*@>
                        <thead>
                            <tr class="ColHeading">

                                <th>Date</></th>
                                <th>Ref</th>
                                <th>Amount</th>
                                <th>PartyName</th>
                                <th>TransType</th>
                                <th>VATRate</th>
                                <th>Collected</th>
                                <th>Return</th>

                            </tr>
                        </thead>
                        <tbody>


                            @if (Model.VAT_INReportPrint != null)
                            {


                                foreach (pa_VAT item in Model.VAT_INReportPrint)
                                {
                                    <tr class="gradeX odd" role="row">

                                        <td>@Html.DisplayFor(modelItem => item.Date) </td>
                                        <td>@Html.DisplayFor(modelItem => item.Ref)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Value) </td>
                                        <td>@Html.DisplayFor(modelItem => item.Party_Name) </td>

                                        <td>@Html.DisplayFor(modelItem => item.TransType) </td>

                                        <td>@Html.DisplayFor(modelItem => item.VAT_Rate) </td>
                                        <td>@Html.DisplayFor(modelItem => item.Collected) </td>
                                        <td>@Html.DisplayFor(modelItem => item.Return) </td>



                                    </tr>

                                }
                            }







                        </tbody>
                    </table>
                </div>
            </section>
        </div>
