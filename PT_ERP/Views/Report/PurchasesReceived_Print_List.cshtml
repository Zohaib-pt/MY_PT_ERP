@using DAL
@using DAL.Models
@model DAL.oClasses.OPurchases
@{@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

Layout = null;
var StartDate = @Context.Request.Query["From_Date"];
var EndDate = @Context.Request.Query["To_Date"];

}




<!DOCTYPE HTML>
<HTML>
<head>

    <!-- Basic -->
    <meta charset="UTF-8">

    <title>@ViewBag.PageTitle</title>
    <meta name="keywords" content="DearlerSol | Dealers Management System " />
    <meta name="description" content="Vehicle Management System | Dealer Management System | Dealer ERP ">
    <meta name="author" content="DealerSol.com">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Favicon  -->
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">


    <!-- Vendor CSS -->
    <link rel="stylesheet" href="~/vendor/bootstrap/css/bootstrap.css" />


    <style>
        .moneycol {
            text-align: right;
        }

        .controlheight {
            height: 1px;
            border: 1px solid #d3d3d3;
            margin: 0px;
        }

            .controlheight table th, .table td {
                padding: 5px;
            }

        .SumHeading {
            background-color: #d3d3d3;
            text-align: left;
            font-weight: bold;
            font-size: 16px
        }

        .ColHeading {
            background-color: #d3d3d3;
            font-size: 18px;
            text-align: center
        }
    </style>


</head>

<BODY>


    <div class="row">
        <div class="col">
            <section>
                <header>
                    <div class="row form-inline">
                        @* Farzaib *@
                        <div class="col-md-6">
                            <p class="h6 text-right"><b>From</b> @StartDate  <b>Till</b> @EndDate</p>
                            <div class="text-center">
                                <h4 class="text-left" style="position:absolute; top:10%; left: 1.5%;">@Configuration.GetSection("AppSettings").GetSection("CompanyName").Value.ToString()</h4>
                                <h3>Purchase Received</h3>
                            </div>



                        </div>
                        @*<div class="col-md-12" style="text-align:center">

                                <h3 style="color:black;">
                                    Purchase Received
                                    <br />
                                </h3>
                                <p><b>From</b> @StartDate   <b>Till</b> @EndDate</p>


                            </div>*@


                    </div>

                </header>
                <div>
                    <table class="table table-bordered" @*id="datatable-default"*@>
                        <thead>
                            <tr class="ColHeading">





                                <td>  GRVRef </td>
                                <td>  Vendor_Name </td>
                                <td>  GRVDate   </td>
                                <td>  Total_Amt </td>


                            </tr>
                        </thead>
                        <tbody>


                            @if (Model.GRVOtherMasterList_Print != null)
                            {


                                foreach (Pa_GoodsReceived_Master item in Model.GRVOtherMasterList_Print)
                                {


                                    <tr>


                                        <td class="controlheight text-nowrap">@Html.DisplayFor(modelItem => item.GRVRef) </td>
                                        <td class="controlheight">@Html.DisplayFor(modelItem => item.Vendor_Name)</td>
                                        <td class="controlheight">@Html.DisplayFor(modelItem => item.GRVDate) </td>
                                        <td class="controlheight ">@Html.DisplayFor(modelItem => item.Total_Amount) </td>







                                    </tr>
                                }
                            }


                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </div>
</BODY>
</HTML>