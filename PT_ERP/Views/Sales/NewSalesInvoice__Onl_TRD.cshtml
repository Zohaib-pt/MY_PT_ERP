        function CalculateSumAmount() {
            debugger

            var Unit_Price = 0;

            var VATRate = 0;

            var VATExp = 0;
            var SalePrice = 0;
            var Total_Amount = 0;
            var Quanity = 0;
            var Sale_Amount = 0;
            if (document.getElementById("Quantity") != null) {
