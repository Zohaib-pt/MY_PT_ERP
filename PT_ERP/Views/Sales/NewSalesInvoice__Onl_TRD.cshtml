            } else {
                Quanity = 1;
            }
            Unit_Price = document.getElementById("Unit_Price").value;

            VATRate = document.getElementById("VATRate").value;



            Total_Amount = document.getElementById("Total_Amount").value;


            if (!Unit_Price) {
                Unit_Price = 0;
            }

            if (!VATRate) {
                VATRate = 0;

            }
            if (!VATExp) {
                VATExp = 0;
            }
            if (!Total_Amount) {
                Total_Amount = 1;
            }

            if (!Quanity) {
                Quanity = 0;
            }

            //---calculate sum vat exp
            if (VATRate == 5) {


                Total_Amount = (Number(Unit_Price) * Number(Quanity));
                VATExp = VATRate * Total_Amount / 100;
                $("#VATExp").val(VATExp);
                $("#Total_Amount").val(Number(Total_Amount) + Number(VATExp));
            }
            if (VATRate == 6) {


                Total_Amount = (Number(Unit_Price) * Number(Quanity));
                VATExp = 5 * Total_Amount / 100;
                $("#VATExp").val(VATExp);
                SalePrice = Number(Unit_Price) - Number(VATExp);
                $("#Unit_Price").val(SalePrice);
                Sale_Amount = (Number(Total_Amount) - Number(VATExp));
