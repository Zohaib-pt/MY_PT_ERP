@using DAL
@using DAL.Models
@model DAL.oClasses.OSales






<div class="modal-header" style="background: #f6f6f6;">


    <h4 class="modal-title">Discount Details</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>

</div>


<div class="modal-body">

    <section class="card">

        <div class="card-body">




            <div class="row form-group">

                <div class="col-lg-12">

                    <table class="table table-responsive-md table-bordered mb-0 mt-2">
                        <thead>
                            <tr>
                                <th>InvoiceNO</th>
                                <th>Sale Date</th>
                                <th>Total Amount</th>
                                <th>Discount</th>

                                <th>Discount Code</th>
                             

                            </tr>
                        </thead>

                        <tbody>

                            @if (Model.DiscountDetailList != null)
                            {
                                foreach (pa_SalesDetails item in Model.DiscountDetailList)
                                {


                                    <tr>
                                        <td>

                                            @item.INVOICENO
                                        </td>
                                        <td>
                                            @item.INOVOICEDATE


                                        </td>
                                        <td>
                                            @item.Total


                                        </td>
                                        <td>
                                            @item.Discount


                                        </td>

                                        <td>
                                            @item.DiscountCode


                                        </td>
                                      

                                    </tr>
                                }
                            }

                        </tbody>
                        <tfoot>
                            @if (Model.DiscountDetailList_TTL != null)
                            {
                                foreach (pa_SalesDetails item in Model.DiscountDetailList_TTL)
                                {
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td>@item.Total_Discount</td>
                                        <td></td>
                                    </tr>
                                }
                            }
                                </tfoot>
                    </table>

                </div>


            </div>





        </div>



    </section>
</div>
