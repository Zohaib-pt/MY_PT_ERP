                win.focus();
            });
            $("#print-btn1").click(function(event){
                event.preventDefault();
                var win = window.open("@Url.Action("Paper2", "Report")" + "?papers_ID=" + $("#papers_ID").val() , "_blank");
                win.focus();
            });
            $("#print-btn2").click(function(event){
                event.preventDefault();
                var win = window.open("@Url.Action("Paper3", "Report")" + "?papers_ID=" + $("#papers_ID").val() , "_blank");
                win.focus();
            });
        })
    </script>


