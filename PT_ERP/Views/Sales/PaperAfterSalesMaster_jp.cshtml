        //---Update master Sale voucher
        $(document).ready(function () {
            $("#ButtonMasterUpdate").click(function () {
                $("#formSaleMaster").submit();
            });
        });



        //This function is inserting Sale detail record against ref and then picking record on the basis of this
        function GetSaleDetailListByRef() {
            debugger
            var SaleRef = document.getElementById("SaleRef_Number").value.toString();
            var Chassis = "";
            var hdpapers_ID = document.getElementById("hdpapers_ID").value.toString();

            $.ajax({

                type: "Get",
                url: "/Sales/Insert_And_GetpaperAfterSaleDetails",
                data: { //Passing data
                    SaleRef: SaleRef,
                    Chassis: Chassis,
                    hdpapers_ID: hdpapers_ID


                },
                datatype: "json",
                success: function (data) {

                    debugger
                    if (data.message == undefined) {
                        //alert("Saved Successfully!");
                        $('#SaleRef_Number').val('');
                        $('#SaleDetailSection').html(data);
                       
                      


                    } else {
                        alert(data.message);

                    }


                }, error: function (jqXHR, status, err) {
                    alert("An error occured. Please try again!");
                }

            })
        }

        function GetSaleDetailListByChassis() {
            debugger
            var SaleRef = "";
            var Chassis = document.getElementById("Chassis").value.toString();
            var hdpapers_ID = document.getElementById("hdpapers_ID").value.toString();

            $.ajax({

                type: "Get",
                url: "/Sales/Insert_And_GetpaperAfterSaleDetails",
                data: { //Passing data
                    SaleRef: SaleRef,
                    Chassis: Chassis,
                    hdpapers_ID: hdpapers_ID


                },
                datatype: "json",
                success: function (data) {

                    debugger
                    if (data.message == undefined) {
                        //alert("Saved Successfully!");
                        $('#Chassis').val('');
                        $('#SaleDetailSection').html(data);
                        

                    } else {
                        alert(data.message);

                    }


                }, error: function (jqXHR, status, err) {
                    alert("An error occured. Please try again!");
                }

            })
        }


        function SuccessDeleteSaleDetail(data) {

            var SuccessDiv = " <div class='col-lg-12'><div class='alert alert-info'><button type='button' class='close' data-dismiss='alert' aria-hidden='true'>×</button><strong>Success!</strong> Deleted Successfully! <a href='' class='alert-link'></a></div></div>";
            debugger
            if (data.message == undefined) {
                //alert("Saved Successfully!");
                $('#DeleteSaleDetailModal').modal('hide');
                $('#SaleDetailSection').html(data);
                $('#SuccessErrorSection').html(SuccessDiv).show();;



            } else {
                alert(data.message);
                $('#DeleteSaleDetailModal').modal('hide');
            }


        }

        function FailureDeleteSaleDetail() {

            alert("Failured occured. Please try again!");
            $('#DeleteSaleDetailModal').modal('hide');
        }

        //---delete Sale master
        function DeleteSaleDetail(papers_ID) {
            debugger
            $("#papers_ID_Delete").val(papers_ID);

        }

        //---change Sale master status
        function ChangeStatusSaleMaster(papers_ID, Status) {
            debugger
            $("#SaleMaster_ID_Status").val(papers_ID);
            $("#Sale_Status_ID").val(Status);

        }

