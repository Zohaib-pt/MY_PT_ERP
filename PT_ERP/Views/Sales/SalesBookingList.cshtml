@using DAL
@using DAL.Models
@using X.PagedList.Mvc.Core; @*//import this so we get our HTML Helper*@
@using X.PagedList;  @*//import this so we can cast our list to IPagedList *@
@model DAL.oClasses.OSales


@{
    ViewData["Title"] = "Sales booking list";
    Layout = "~/Views/Shared/_LayoutTablePages.cshtml";
}

<header class="page-header">
    <h2>@ViewBag.SectionHeaderTitle</h2>

    <div class="right-wrapper text-right">
        <ol class="breadcrumbs">
            <li>
                <a href="@ViewBag.Home_Dashboard">
                    <i class="fas fa-home"></i>
                </a>
            </li>

            <li><a><span>@ViewBag.BreadCumController</span></a></li>
            <li><a asp-area="" asp-controller="@ViewBag.BreadCumController" asp-action="@ViewBag.BreadCumAction"><span>@ViewBag.SectionSub_HeaderTitle</span></a></li>

        </ol>

        <a class="sidebar-right-toggle"></a>
    </div>
</header>


<div class="row">
    @if (TempData["Success"] != null || TempData["Error"] != null)
    {
        <div class="col-lg-12">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-info">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <strong>Success!</strong> @TempData["Success"] <a href="" class="alert-link"></a>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <strong>Error!</strong> @TempData["Error"] <a href="" class="alert-link"></a>
                </div>
            }
        </div>
    }


</div>

<!--Following 'LoaderImage' div is for showing ajax loader before ajax call-->
<div class="imageGIFLoader" id="LoaderImage">
    <img src="~/img/projects/ajax-loader.gif" class="img-responsive" style="width:65px; height:65px;" />
</div>


<div class="row">
    <div class="col">
        <section class="card">
            <header class="card-header">

                <div class="row">



                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <section class="card">
                            <div class="card-body">

                                <form method="get" data-ajax="true" data-ajax-complete="myCompleteSearch" data-ajax-success="mySuccessSearch" data-ajax-failure="myFailureSearch"
                                      data-ajax-begin="myBeginSearch" asp-area="" asp-controller="Sales" asp-action="GetSalesMasterBookingListBySearchFilers" data-ajax-loading="">

                                    <div class="row form-group">

                                        <div class="col-lg">
                                            <div class="form-group">
                                                <label class="col-form-label" for="Project_ID">Ref</label>
                                                <input type="text" id="SaleRef" name="SaleRef" class="form-control" placeholder="Ref" />

                                            </div>
                                        </div>


                                        <div class="col-lg">
                                            <div class="form-group">
                                                <label class="col-form-label" for="From_Date">Start Date</label>
                                                <div class="input-group">
                                                    <span class="input-group-prepend">
                                                        <span class="input-group-text">
                                                            <i class="fas fa-calendar-alt"></i>
                                                        </span>
                                                    </span>

                                                    <input type="text" data-plugin-datepicker class="form-control" autocomplete="off" id="StartDate" name="StartDate">

                                                </div>
                                            </div>

                                        </div>
                                        <div class="col-lg">
                                            <div class="form-group">
                                                <label class="col-form-label" for="To_Date">End Date</label>
                                                <div class="input-group">
                                                    <span class="input-group-prepend">
                                                        <span class="input-group-text">
                                                            <i class="fas fa-calendar-alt"></i>
                                                        </span>
                                                    </span>

                                                    <input type="text" data-plugin-datepicker class="form-control" autocomplete="off" id="EndDate" name="EndDate">

                                                </div>
                                            </div>

                                        </div>

                                        <div class="col-lg">
                                            <div class="form-group">
                                                <label class="col-form-label" for="Color">Customer Name</label>
                                                <input type="text" id="Customer_Name" name="Customer_Name" class="form-control" placeholder="Customer Name" />
                                            </div>
                                        </div>
                                        <div class="col-lg">
                                            <div class="form-group">
                                                <label class="col-form-label" for="Color">Chassis No</label>
                                                <input type="text" id="Chassis_No" name="Chassis_No" class="form-control" placeholder="Chassis No" />
                                            </div>
                                        </div>
                                        <partial name="~/Views/Shared/_CompanyWise.cshtml" />

                                    </div>

                                    <div class="row">
                                        <div class="col-lg">
                                            <div class="form-group">
                                                <label class="col-form-label" for="Search"> &nbsp; </label>

                                                <button type="submit" class="mb-1 mt-1 mr-1 btn btn-sm btn-primary">Search&nbsp;<i class="fas fa-search"></i></button>

                                                <a class="mb-1 mt-1 mr-1 btn btn-sm btn-primary" asp-area="" asp-controller="Sales" asp-action="NewSalesBooking">Add New&nbsp;<i class="fas fa-plus"></i></a>

                                                <a type="submit" class="mb-1 mt-1 mr-1 btn btn-sm btn-info" href="" id="print-btn">Print &nbsp;<i class="fas fa-print"></i></a>
                                                <a type="submit" class="mb-1 mt-1 mr-1 btn btn-sm btn-success" href="" id="export-btn">Export &nbsp;<i class="fas fa-file-excel"></i></a>

                                            </div>
                                        </div>
                                    </div>



                                </form>
                            </div>
                        </section>
                    </div>
                </div>



            </header>
            <div class="card-body" id="SalesBookingListSearch">


                <div class="invoice-summary mb-1">

                    <div class="row mb-1">

                        <div class="col-lg-6 col-md-6 mb-1">
                            <b>@ViewBag.RecordsPerPage</b> records per page
                        </div>

                        <div class="col-lg-6 col-md-6 mb-1 justify-content-end text-right">

                        </div>
                    </div>

                </div>

                <table class="table table-bordered table-striped mb-0 mt-1" @*id="datatable-default"*@>
                    <thead>
                        <tr>





                            <th>Sale Ref</th>

                            <th>Sale Date</th>
                            <th>Customer Name</th>
                            <th>Total Amount</th>
                            <th>Paid</th>
                            <th>Bal Due</th>
                            <th>Status</th>
                            <th>View</th>




                        </tr>
                    </thead>
                    <tbody>


                        @if (Model.SalesMasterIPagedList != null)
                        {


                            foreach (pa_SalesMaster_DAL item in Model.SalesMasterIPagedList)
                            {


                                <tr>

                                    <td> <a asp-controller="Sales" asp-action="NewSalesBooking" asp-route-SaleMaster_ID="@item.SaleMaster_ID">@Html.DisplayFor(modelItem => item.SaleRef)</a></td>
                                    <td>@Html.DisplayFor(modelItem => item.SaleDate)</td>

                                    <td>@Html.DisplayFor(modelItem => item.Customer_Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Total_Amt)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Paid_amt)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Bal_due)</td>

                                    <td>@Html.DisplayFor(modelItem => item.SaleStatus)</td>


                                    <td> <a asp-controller="Sales" asp-action="NewSalesBooking" asp-route-SaleMaster_ID="@item.SaleMaster_ID">View</a></td>
                                    @*<td>@Html.DisplayFor(modelItem => item.Modified_at)</td>*@




                                </tr>
                            }
                        }





                    </tbody>
                </table>

                <div class="invoice-summary">

                    <div class="row">

                        <div class="col-lg-6 col-md-6">

                        </div>

                        <div class="col-lg-6 col-md-6 justify-content-end text-right">
                       
                            @if (Model.SalesMasterIPagedList.Count() != 0)
                            {

                                @Html.PagedListPager(Model.SalesMasterIPagedList, page => Url.Action("GetBookingListListBySearchFilters", "Sales", new { SaleRef = ViewBag.SaleRef_Booking, StartDate = ViewBag.StartDate_Booking, EndDate = ViewBag.EndDate_Booking, Customer_Name = ViewBag.Customer_Name_Booking, Chassis_No = ViewBag.Chassis_No_Booking, cID = ViewBag.c_ID_Booking, page })

    , X.PagedList.Mvc.Core.Common.PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions()
    {
        HttpMethod = "get",
        UpdateTargetId = "SalesBookingListSearch"
    })
                                )
                            }
                        </div>
                    </div>

                </div>


            </div>
        </section>
    </div>
</div>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>


    <script>

        function myBeginSearch() {
            $("#LoaderImage").css("visibility", "visible");
        }

        function mySuccessSearch(data) {

            debugger
            if (data.message == undefined) {

                $('#SalesBookingListSearch').html(data);


            } else {
                alert(data.message);

            }


        }

        function myFailureSearch() {

            alert("Failured occured. Please try again!");
            $("#LoaderImage").css("visibility", "hidden");
        }

        function myCompleteSearch() {
            $("#LoaderImage").css("visibility", "hidden");

        }

        $(document).ready(function(){
    $("#print-btn").click(function(event){
        event.preventDefault();

        var win = window.open("@Url.Action("SalesBookingList_print", "Report")" + "?SaleRef=" + $("#SaleRef").val() + "&StartDate=" + $("#StartDate").val() + "&EndDate=" + $("#EndDate").val() + "&Customer_Name=" + $("#Customer_Name").val() + "&Chassis_No=" + $("#Chassis_No").val() + "&c_ID=" + $("#c_ID").val() , "_blank");
        win.focus();
    });
        })
                $(document).ready(function(){
    $("#export-btn").click(function(event){
       event.preventDefault();
        window.location.href = "@Url.Action("SalesBookingList_Excel", "Report")" + "?SaleRef=" + $("#SaleRef").val() + "&StartDate=" + $("#StartDate").val() + "&EndDate=" + $("#EndDate").val() + "&Customer_Name=" + $("#Customer_Name").val() + "&Chassis_No=" + $("#Chassis_No").val() + "&c_ID=" + $("#c_ID").val();
    });
})
    </script>



}