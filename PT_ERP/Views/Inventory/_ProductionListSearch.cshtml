<div class="invoice-summary mb-1">

    <div class="row mb-1">

        <div class="col-lg-6 col-md-6 mb-1">
            <b>@ViewBag.RecordsPerPage</b> records per page
        </div>

        <div class="col-lg-6 col-md-6 mb-1 justify-content-end text-right">

        </div>
    </div>

</div>

<table class="table table-bordered table-striped mb-0 mt-1" @*id="datatable-default"*@>
    <thead>
        <tr>




            <th>Ref</th>

            <th>P_Date</th>
            <th>Customer Ref</th>
            <th>Details</th>
            <th>Supervisor</th>

            <th>View</th>





        </tr>
    </thead>
    <tbody>

        @if (Model.ProductionMasterList != null)
        {
            foreach (Pa_Production_Master item in Model.ProductionMasterList)
            {

                <tr>



                    <td> <a asp-controller="Inventory" asp-action="NewProduction" asp-route-Production_ID="@item.Production_ID">@Html.DisplayFor(modelItem => item.Ref)</a></td>
                    <td>@Html.DisplayFor(modelItem => item.P_Date)</td>

                    <td>@Html.DisplayFor(modelItem => item.CustomerRef)</td>
                    <td>@Html.DisplayFor(modelItem => item.Production_Details)</td>
                    <td>@Html.DisplayFor(modelItem => item.Supervisor)</td>

                    <td> <a asp-controller="Inventory" asp-action="NewProduction" asp-route-Production_ID="@item.Production_ID">View</a></td>
                    @*<td>@Html.DisplayFor(modelItem => item.Modified_at)</td>*@





                </tr>
            }
        }






    </tbody>

</table>

