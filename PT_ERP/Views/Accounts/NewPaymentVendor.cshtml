@using DAL
@using DAL.Models
@model DAL.oClasses.OAccounts
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration



@{
    ViewData["Title"] = "NewPaymentVouchersGeneral";
    Layout = "~/Views/Shared/_LayoutTablePages.cshtml";
}

@{


    ViewBag.Vat_ExpTotal = null;
    ViewBag.AmountTotal = null;
    ViewBag.Grand_Total = null;

    string Form_PaymentMaster_ActionMethod = "";
    int? PaymentMaster_ID = ViewBag.PaymentMaster_ID;



    if (Model.paymentMasterObject != null && Model.paymentMasterObject.PaymentMaster_ID > 0)
    {

        Form_PaymentMaster_ActionMethod = "UdpatePaymentMaster_Vendor";


    }
    else
    {
        Form_PaymentMaster_ActionMethod = "InsertPaymentMaster_Vendor";


    }
    var IsChassisEnabled = Configuration.GetSection("AppSettings").GetSection("IsChassisEnabled").Value;
    string DefaultCurrency_ID_Dropdown = Configuration.GetSection("AppSettings").GetSection("DefaultCurrency_ID_Dropdown").Value;
}










<header class="page-header">
    <h2>@ViewBag.SectionHeaderTitle</h2>


    <div class="right-wrapper text-right">
        <ol class="breadcrumbs">
            <li>
                <a href="@ViewBag.Home_Dashboard">
                    <i class="fas fa-home"></i>
                </a>
            </li>
            <li><a asp-area="" asp-controller="Accounts" asp-action="NewPaymentVouchersGeneral"><span>@ViewBag.SectionSub_HeaderTitle</span></a></li>

        </ol>

        <a class="sidebar-right-toggle"></a>
    </div>
</header>






<div class="row" id="SuccessErrorSection">
    @if (TempData["Success"] != null || TempData["Error"] != null)
    {
        <div class="col-lg-12">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-info">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <strong>Success!</strong> @TempData["Success"] <a href="" class="alert-link"></a>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <strong>Error!</strong> @TempData["Error"] <a href="" class="alert-link"></a>
                </div>
            }
        </div>
    }


</div>

<!-- start: page -->
<section class="card">
    <div class="card-body">
        <div class="invoice">
            <header class="clearfix">
                <div class="row">
                    <div class="col-sm-6 mt-0">
                        <h2 class="h4 mt-0 mb-2 text-dark font-weight-bold">Payment Voucher (Vendor)</h2>

                    </div>

                    <div class="col-sm-6 mt-0 text-right">

                        @if (String.IsNullOrEmpty(Model.paymentMasterObject.PaymentStatus))
                        {
                            <h4 class=" mt-0 mb-2 text-dark"><b>Status:</b> <label>Pending</label></h4>
                        }
                        else
                        {
                            <h4 class=" mt-0 mb-2 text-dark"><b>Status:</b> <label>@Model.paymentMasterObject.PaymentStatus</label></h4>
                        }
                    </div>

                </div>
            </header>

            <div class="row">
                <div class="col-lg-8">


                    @if (Model.paymentMasterObject.PaymentMaster_ID != null)
                    {
                        if (Model.paymentMasterObject.PaymentMaster_ID > 0)
                        {

                            <button type="button" id="ButtonUpdateMaster" class="btn-sm btn btn-success">Update &nbsp;<i class="fas fa-save"></i></button>

                            <button type="button" class="btn-sm btn btn-primary">Edit  &nbsp;<i class="fas fa-edit"></i></button>


                            <button type="button" id="ChangeStatusMaster" class="btn-sm btn btn-warning" data-toggle="modal" data-target="#ChangeStatusPaymentModal" onclick="ChangeStatusPaymentMaster('@Model.paymentMasterObject.PaymentMaster_ID', '5');">Cancel &nbsp;<i class="fas fa-cross"></i></button>
                            <button type="button" class="btn-sm btn btn-danger" data-toggle="modal" data-target="#DeletePaymentMasterModal" onclick="DeletePaymentMaster('@Model.paymentMasterObject.PaymentMaster_ID');">Delete &nbsp;<i class="fas fa-trash-alt"></i></button>
                            <button type="button" id="btnApproval" @ViewBag.ApprovalVisibility class="btn-sm btn btn btn-dark" data-toggle="modal" data-target="#ChangeStatusPaymentModal" onclick="ChangeStatusPaymentMaster('@Model.paymentMasterObject.PaymentMaster_ID', '2');">Approve &nbsp;<i class="fa fa-check"></i></button>



                            <button type="button" class="btn-sm btn btn-info" id="print-btn">Print &nbsp;<i class="fas fa-print"></i></button>
                            <button type="button" id="btnAttachment" @ViewBag.AttachmentVisibility class="btn-sm btn btn btn-default" style="background-color: #68889E; color:white; border-color:#2F3E48" onclick="ShowAttachmentMaster('@Model.paymentMasterObject.PaymentMaster_ID');">Attachment &nbsp;<i class="fa fa-paperclip"></i></button>
                            <a asp-controller="Accounts" asp-action="PaymentsList" class="btn-sm btn btn-default">List &nbsp;<i class="fas fa-list"></i></a>

                        }
                    }
                    else
                    {
                        <button type="button" id="ButtonIssueMaster" class="btn-sm btn btn-success">Issue &nbsp;<i class="fas fa-save"></i></button>

                        <button type="button" class="btn-sm btn btn-primary" disabled="disabled">Edit  &nbsp;<i class="fas fa-edit"></i></button>


                        <button type="button" class="btn-sm btn btn-warning" disabled="disabled">Cancel &nbsp;<i class="fas fa-cross"></i></button>
                        <button type="button" class="btn-sm btn btn-danger" disabled="disabled">Delete &nbsp;<i class="fas fa-trash-alt"></i></button>
                        <button type="button" @ViewBag.ApprovalVisibility class="btn-sm btn btn btn btn-dark" disabled="disabled">Approve &nbsp;<i class="fa fa-check"></i></button>
                        <button type="button" class="btn-sm btn btn-info" disabled="disabled">Print &nbsp;<i class="fas fa-print"></i></button>
                        <a asp-controller="Accounts" asp-action="PaymentsList" class="btn-sm btn btn-default">List &nbsp;<i class="fas fa-list"></i></a>

                    }






                </div>

            </div>

            <div class="row">

                <div class="col">



                    <form method="post" asp-area="" asp-controller="Accounts" asp-action="@Form_PaymentMaster_ActionMethod" id="formPaymentMaster">


                        <section class="card">

                            <div class="card-body">



                                <div class="row form-group">
                                    <div class="col-lg-6">

                                        <div class="row MasterForm">
                                            <label for="Vendor_ID" class="col-sm-3 col-form-label">Paid To</label>
                                            <div class="col-sm-2" style="padding:0;">
                                                <select class="form-control" id="party_type" asp-items="@(new SelectList( ViewBag.PartyType,"Party_Type_ID","Party_Type", Model.paymentMasterObject.party_type))" name="party_type" required>
                                                </select>


                                            </div>
                                            <div class="col-sm-4" style="padding:0;">
                                                <select class="form-control select2" id="Vendor_ID" name="Vendor_ID" asp-for="@(Model.paymentMasterObject.Party_ID)" required>
                                                </select>

                                                <input type="hidden" id="PaymentMaster_ID" name="PaymentMaster_ID" value="@PaymentMaster_ID" />
                                                <input type="hidden" id="hdVendor_ID" name="hdVendor_ID" value="@Model.paymentMasterObject.Party_ID" />
                                            </div>
                                            <div class="col-sm-3">
                                                <input type="text" class="form-control" id="NameText" name="NameText" value="@Model.paymentMasterObject.NameText" placeholder="Name">
                                            </div>
                                        </div>

                                        <div class="row MasterForm">
                                            <label for="Vendor_ID" class="col-sm-3 col-form-label">Explanation</label>
                                            <div class="col-sm-9" style="padding:0;">
                                                <textarea class="form-control" rows="2" id="Explanation" name="Explanation" placeholder="Enter Explanation">@Model.paymentMasterObject.Explanation</textarea>


                                            </div>
                                        </div>



                                    </div>
                                    <div class="col-lg-2">

                                    </div>

                                    <div class="col-lg-4 ">

                                        <div class="row MasterForm">
                                            <label for="PurchaseRef" class="col-sm-3 col-form-label">Ref No</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" id="PaymentMaster_ref" name="PaymentMaster_ref" value="@Model.paymentMasterObject.PaymentMaster_ref" readonly>
                                            </div>
                                        </div>


                                        <div class="row MasterForm">
                                            <label for="PurchaseDate" class="col-sm-3 col-form-label">Date</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <span class="input-group-prepend">
                                                        <span class="input-group-text">
                                                            <i class="fas fa-calendar-alt"></i>
                                                        </span>
                                                    </span>
                                                    @if (Model.paymentMasterObject.Date != null)
                                                    {
                                                        <input type="text" data-plugin-datepicker class="form-control" autocomplete="off" id="Date" name="Date" value="@Model.paymentMasterObject.Date" required>

                                                    }
                                                    else
                                                    {
                                                        <input type="text" data-plugin-datepicker class="form-control" autocomplete="off" id="Date" name="Date" value="@DateTime.Now.ToString("dd-MMM-yyyy")" required>

                                                    }

                                                </div>
                                            </div>


                                        </div>


                                    </div>



                                </div>

                            </div>



                        </section>
                    </form>
                </div>

            </div>

            <div class="row m-2">
                <div class="col-lg-6">
                    <h2 class="card-title" style="line-height:normal;">Payment Details </h2>
                </div>
                <div class="col-lg-6 text-right">
                    <button class="btn btn-sm btn-primary" data-toggle="modal" id="btnSavePopUp" data-target="#AddNewPaymentDetailModal">Add New &nbsp;<i class="fas fa-plus"></i></button>


                </div>
            </div>

            <div id="PaymentDetailSection">

                <table class="table table-responsive-md table-bordered mb-0">
                    <thead>
                        <tr>
                            <th>Edit/Delete</th>
                            <th>On Account</th>
                            <th>Amount</th>
                            <th width="30%">Description</th>
                            <th>Pay Via</th>


                            <th>VAT</th>
                            <th>Total</th>
                            <th>Ref</th>
                            <th>Cheque Details</th>

                        </tr>
                    </thead>
                    <tbody>

                        @if (Model.paymentDetailList != null)
                        {


                            foreach (Pa_PaymentDetails_DAL item in Model.paymentDetailList)
                            {


                                ViewBag.Vat_ExpTotal = item.VatExpTotal;
                                ViewBag.AmountTotal = item.AmountTotal;
                                ViewBag.Grand_Total = item.Grand_Total;


                        <tr style='color: @(item.transaction_status == 0 ? "green" : "black");'>




                            <td>
                                <a onclick="UpdatePaymentDetailGeneral('@item.PaymentDetails_ID', '@item.DR_accountID', '@item.Amount', '@item.VAT_Rate', '@item.Currency_ID', '@item.Currency_Rate', '@item.Amount_Others',
        '@item.CR_accountID', '@item.Description', '@item.trans_ref', '@item.cheque_bank_name', '@item.cheque_date', '@item.cheque_no', '@item.VAT_Exp', '@item.Total_Amount', '@item.stock_ID', '@item.ExtraChargesFee', '@item.ExtraChargesFeeTax', '@item.Chassis_No', '@item.PDC_Payable_Acc_ID');" data-toggle="modal" data-target="#UpdateNewPaymentDetailModal" id="btnUpdatePopUp"><img style="width: 20px;" src="~/Img/Icons/edit.png" /></a>
                                <a onclick="DeletePaymentDetail('@item.PaymentDetails_ID');" data-toggle="modal" data-target="#DeletePaymentDetailModal"><img style="width: 20px;" src="~/Img/Icons/delete.png" /></a>

                            </td>


                            <td>
                                @Html.DisplayFor(modelItem => item.DR_AccountName)
                                <br />
                                <b>@Html.DisplayFor(modelItem => item.Chassis_No)</b>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)<br />
                                @Html.DisplayFor(modelItem => item.curr_name) x @Html.DisplayFor(modelItem => item.Currency_Rate)

                            </td>
                            <td width="30">@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>@Html.DisplayFor(modelItem => item.CR_AcountName)</td>


                            <td>
                                @Html.DisplayFor(modelItem => item.VAT_Exp)
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Total_Amount)</td>
                            <td>@Html.DisplayFor(modelItem => item.trans_ref)</td>


                            <td>
                                <b> @Html.DisplayFor(modelItem => item.cheque_bank_name)</b>
                                <i>  @Html.DisplayFor(modelItem => item.cheque_no)</i>
                                <b>  @Html.DisplayFor(modelItem => item.cheque_date)</b>

                            </td>


                        </tr>
                            }
                        }

                    </tbody>

                </table>


                <br />
                <div class="invoice-summary">

                    <div class="row">

                        <div class="col-lg-8 col-md-8">

                        </div>

                        <div class="col-lg-4 col-md-4 justify-content-end text-right">
                            <table class="table h6 text-dark">
                                <tbody>
                                    <tr class="b-top-0">
                                        <td colspan="2"> Sub Total:</td>
                                        <td class="text-right" id="SubTotal">@ViewBag.AmountTotal</td>
                                    </tr>
                                    <tr>
                                        <td colspan="2">VAT Charge</td>
                                        <td class="text-right" id="VAT_ChargeTotal">@ViewBag.Vat_ExpTotal</td>
                                    </tr>


                                    <tr class="h5">
                                        <td colspan="2">Total Paid:</td>
                                        <td class="text-right" id="Total_Payable">@ViewBag.Grand_Total</td>
                                    </tr>




                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>

            </div>
            <hr />

            <div class="row">
                <div class="col-sm-3"><span class="show-grid-block">Created at : <b>@Model.paymentMasterObject.create_at </b></span></div>
                <div class="col-sm-3"><span class="show-grid-block">Created by :</span><b>@Model.paymentMasterObject.create_by</b></div>
                <div class="col-sm-3"><span class="show-grid-block">Modified at :<b>@Model.paymentMasterObject.last_updated_at </b></span></div>
                <div class="col-sm-3"><span class="show-grid-block">Modified by : <b>@Model.paymentMasterObject.last_updated_by </b></span></div>
            </div>






        </div>


    </div>
</section>


