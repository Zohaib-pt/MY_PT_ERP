@using DAL
@using DAL.Models
@model DAL.oClasses.OBasicData

@{ ViewData["Title"] = "EngineSpecsCode";
                Layout = "~/Views/Shared/_LayoutTablePages.cshtml"; }


<header class="page-header">
    <h2>@ViewBag.SectionHeaderTitle</h2>

    <div class="right-wrapper text-right">
        <ol class="breadcrumbs">
            <li>
                <a href="@ViewBag.Home_Dashboard">
                    <i class="fas fa-home"></i>
                </a>
            </li>
            <li><a asp-area="" asp-controller="BasicData" asp-action="EngineSpecsCode"><span>@ViewBag.SectionSub_HeaderTitle</span></a></li>

        </ol>

        <a class="sidebar-right-toggle"></a>
    </div>
</header>


<div class="row">
    @if (TempData["Success"] != null || TempData["Error"] != null)
    {
<div class="col-lg-12">
    @if (TempData["Success"] != null)
    {
<div class="alert alert-info">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <strong>Success!</strong> @TempData["Success"] <a href="" class="alert-link"></a>
</div>}

    @if (TempData["Error"] != null)
    {
<div class="alert alert-danger">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <strong>Error!</strong> @TempData["Error"] <a href="" class="alert-link"></a>
</div>}
</div>}


</div>

<div class="row">
    <div class="col">
        <section class="card">
            <header class="card-header">

                <div class="row">
                    <div class="col-lg-6">
                        <h2 class="card-title" style="line-height:normal;">Engine Specs Code List </h2>
                    </div>
                    <div class="col-lg-6" style="text-align:right;">
                        <button class="btn btn-sm btn-primary" data-toggle="modal" data-target="#AddEngineSpecsCodeModal">Add Engine Specs Code &nbsp;<i class="fas fa-plus"></i></button>

                        <button type="button" class="mb-1 mt-1 mr-1 btn btn-sm btn-info">Print &nbsp;<i class="fas fa-print"></i></button>
                    </div>
                </div>

            </header>
            <div class="card-body">



                <table class="table table-bordered table-striped mb-0" id="datatable-default">
                    <thead>
                        <tr>


                            <th>Edit/Delete</th>

                            <th>ID</th>
                            <th>Engine Specs Code</th>
                            <th>Specs Description</th>



                            <th>Create At</th>
                            <th>Create By</th>
                            <th>Updated At</th>
                            <th>Updated By</th>





                        </tr>
                    </thead>
                    <tbody>

                        @if (Model.EngineSpecsCodeList != null)
                        {
                            foreach (EngineSpecsCode_DAL item in Model.EngineSpecsCodeList)
                            {

            <tr>

                <td>
                    <a onclick="UpdateEngineSpecsCode('@item.EngineSpecsCode_ID', '@item.EngineSpecsCode','@item.SpecsDescription')" data-toggle="modal"
                       data-target="#UpdateEngineSpecsCodeModal"><img style="width: 20px;" src="~/Img/Icons/edit.png" /></a>
                    <a onclick="DeleteEngineSpecsCode('@item.EngineSpecsCode_ID')" data-toggle="modal" data-target="#DeleteEngineSpecsCodeModal"><img style="width: 20px;" src="~/Img/Icons/delete.png" /></a>

                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.EngineSpecsCode_ID)
                </td>

                <td> @Html.DisplayFor(modelItem => item.EngineSpecsCode)</td>

                <td> @Html.DisplayFor(modelItem => item.SpecsDescription)</td>

                <td> @Html.DisplayFor(modelItem => item.Created_at)</td>
                <td> @Html.DisplayFor(modelItem => item.Created_by)</td>
                <td> @Html.DisplayFor(modelItem => item.Modified_at)</td>
                <td> @Html.DisplayFor(modelItem => item.Modified_by)</td>


            </tr>
}
    }

                    </tbody>
                </table>
            </div>
        </section>
    </div>
</div>


<!-- Modal Insert Engine Specs Code -->
<div class="modal fade" id="AddEngineSpecsCodeModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background: #f6f6f6;">


                <h4 class="modal-title">Add Engine Specs Code</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>

            <form method="post" asp-area="" asp-controller="BasicData" asp-action="Insert_EngineSpecsCode">

                <div class="modal-body">

                    <section class="card">

                        <div class="card-body">



                            <div class="row form-group">

                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label class="col-form-label" for="Project_ID">Engine Specs Code*</label>

                                        <input type="text" class="form-control" id="EngineSpecsCode" name="EngineSpecsCode" required>

                                        <input type="hidden" id="EngineSpecsCode_ID" name="EngineSpecsCode_ID" />
                                    </div>
                                </div>

                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label class="col-form-label" for="Project_ID">Specs Description</label>

                                        <input type="text" class="form-control" id="SpecsDescription" name="SpecsDescription">

                                    </div>
                                </div>


                            </div>



                        </div>



                    </section>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-sm btn-primary">Save</button>
                    <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Close</button>
                </div>
            </form>

        </div>
    </div>
</div>


<!-- Modal Delete Engine Specs Code -->
<div class="modal fade bs-modal-lg" id="DeleteEngineSpecsCodeModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background: #f6f6f6;">


                <h4 class="modal-title">Delete Engine Specs Code</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>

            <form method="post" asp-area="" asp-controller="BasicData" asp-action="Delete_EngineSpecsCode">

                <div class="modal-body">

                    <section class="card">

                        <div class="card-body" style="box-shadow:none;">


                            <div class="row form-group">

                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <h3>Do you want to delete this record?</h3>

                                        <input type="hidden" id="EngineSpecsCode_ID_Delete" name="EngineSpecsCode_ID" />

                                    </div>
                                </div>


                            </div>


                        </div>



                    </section>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Confirm</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </form>

        </div>
    </div>
</div>



<!-- Modal udpate Engine Specs Code -->
<div class="modal fade bs-modal-sm" id="UpdateEngineSpecsCodeModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background: #f6f6f6;">


                <h4 class="modal-title">Update EngineSpecs Code</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>

            <form method="post" asp-area="" asp-controller="BasicData" asp-action="Update_EngineSpecsCode">

                <div class="modal-body">

                    <section class="card">

                        <div class="card-body">



                            <div class="row form-group">

                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label class="col-form-label" for="Project_ID">Engine Specs Code*</label>

                                        <input type="text" class="form-control" id="EngineSpecsCode_Update" name="EngineSpecsCode" required>

                                        <input type="hidden" id="EngineSpecsCode_ID_update" name="EngineSpecsCode_ID" />
                                    </div>
                                </div>

                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label class="col-form-label" for="Project_ID">Specs Description</label>

                                        <input type="text" class="form-control" id="SpecsDescription_Update" name="SpecsDescription">

                                    </div>
                                </div>


                            </div>



                        </div>



                    </section>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-sm btn-primary">Update</button>
                    <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Close</button>
                </div>
            </form>

        </div>
    </div>
</div>





@section Scripts {
    <script type="text/javascript">function DeleteEngineSpecsCode(EngineSpecsCode_ID) {
            debugger
            $("#EngineSpecsCode_ID_Delete").val(EngineSpecsCode_ID);

        }

        function UpdateEngineSpecsCode(EngineSpecsCode_ID, EngineSpecsCode, SpecsDescription) {
            debugger
            $("#EngineSpecsCode_ID_update").val(EngineSpecsCode_ID);
            $("#EngineSpecsCode_Update").val(EngineSpecsCode);
            $("#SpecsDescription_Update").val(SpecsDescription);
        }</script>
}



