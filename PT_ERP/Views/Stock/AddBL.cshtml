                    <section class="card">

                        <div class="card-body" style="box-shadow:none;">


                            <div class="row form-group">

                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <h3>Do you want to delete this record?</h3>
                                        @if (Model.BLMasterObj.BLNO_ID != null)
                                        {
                                            <input id="HdBL_ID" name="HdBL_ID" type="hidden" value="@Model.BLMasterObj.BLNO_ID" /> }
                                        else

                                        {

                                            <input id="HdBL_ID" name="HdBL_ID" type="hidden" value="0" />}

